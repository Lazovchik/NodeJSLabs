{
	"compilerOptions": {
		"target": "es5",
	  	"module": "commonjs",
	   	"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		
		"outDir": "./dist",

		"noImplicitAny": false
	},
	"include":[
		"src/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],

	"compileOnSave": true

}
